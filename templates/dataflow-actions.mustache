{{!
    @template tool_dataflows/dataflow-actions

    Intermediate step to choose a particular step type before filling out the
    details for it on the step edit form.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
        "runnowicon": "t/go",
        "runnowcolor": "btn-success",
        "exporttxt": "Export as txt",
        "exportpreview": "Export preview",
        "enabletext": "Disable",
        "enableicon": "t/hide"
    }
}}

<div class="tool_dataflow-actions-bar">
    <a href="{{runnowurl}}" class="btn {{runnowcolor}}">
        {{#pix}} {{runnowicon}} {{/pix}}
        {{#str}} run_now, tool_dataflows{{/str}}
    </a>
    <a href="{{dryrunnowurl}}" class="btn btn-secondary">
        {{#pix}} t/go {{/pix}}
        {{#str}} dry_run, tool_dataflows{{/str}}
    </a>

    <a href="{{editurl}}" class="btn btn-secondary">
        {{#pix}} i/settings {{/pix}}
        {{#str}} edit {{/str}}
    </a>

    <div class="btn-group">
        <a href="{{exporturl}}" class="btn btn-secondary">
            {{#pix}} t/download {{/pix}}
            {{#str}} export, tool_dataflows {{/str}}
        </a>
        <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            <a href="{{exporttxturl}}" class="dropdown-item">
                {{#str}} exporttxt, tool_dataflows {{/str}}
            </a>
            <a href="{{exportpreviewurl}}" class="dropdown-item">
                {{#str}} exportpreview, tool_dataflows {{/str}}
            </a>
        </div>
    </div>

    <a href="{{enableurl}}" class="btn btn-secondary">
        {{#pix}} {{enableicon}} {{/pix}}
        {{enabletext}}
    </a>

</div>

